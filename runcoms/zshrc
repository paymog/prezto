# ET (Eternal Terminal) autocomplete from SSH config
_et_hosts() {
  local hosts
  hosts=($(grep "^Host " ~/.ssh/config | grep -v "[*?]" | awk '{print $2}'))
  _describe 'hosts' hosts
}
compdef _et_hosts et

